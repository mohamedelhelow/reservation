<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="ReservationnRoom"
        android:textSize="48dp"
        android:textColor="#0C0202"
        android:background="#49A5EE"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Spinner
            android:id="@+id/hotel"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:entries="@array/hotels"
            android:prompt="@string/your_hotel"
            android:layout_marginVertical="40dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <Spinner
            android:id="@+id/rooms"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:entries="@array/room"
            android:layout_marginVertical="75dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_marginVertical="1dp"
            android:text="person"></TextView>

        <Spinner
            android:id="@+id/person"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:entries="@array/people"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_marginVertical="1dp"
            android:text="childern"></TextView>

        <Spinner
            android:id="@+id/childern"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:entries="@array/childern"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/hotelReservation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="reservation"
            />

    </LinearLayout>


    </LinearLayout>